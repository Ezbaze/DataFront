{
  "name": "openfront-client",
  "type": "module",
  "scripts": {
    "format": "prettier --ignore-unknown --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build": "tsc && cross-env GORILLA_BUILD=1 NODE_OPTIONS=\"--require ./scripts/alias-typescript.cjs\" gorilla --input ./build/sidebar/main.js --output ./dist/datafront.user.js --config ./gorilla.json"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "gorilla-build": "^0.1.16",
    "prettier": "^3.5.3",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.7.2",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.5.1",
    "autoprefixer": "^10.4.20"
  },
  "dependencies": {
    "lucide": "^0.545.0",
    "dompurify": "^3.1.7"
  }
}
